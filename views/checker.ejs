<%- include('partials/header'); %>
<h1>Hey <%=  name %>, Please enter the details below</h1>
	<div class="checker-form">
        <form class="container" method="POST" action="/<%=id%>/checker">
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input type="number" min=0 class="form-control" id="age" name="age">
            </div>
            <%if (gender.toLowerCase()==='female'){%>
            <div class="mb-3">
              <label class="form-label">Pregnancies</label><br>
              <input type="number" min=0 class="form-control" id="pregnancies" name="pregnancies">
            </div>
            <% } %> 
            <div class="mb-3">
                <label for="glucose" class="form-label">Glucose</label>
                <input type="number" class="form-control" id="glucose" name="glucose">
            </div>
            <div class="mb-3">
                <label for="bp" class="form-label">Blood Pressure</label>
                <input type="number" class="form-control" id="bp" name="bp">
            </div>
            <div class="mb-3">
                <label for="bmi" class="form-label">BMI</label>
                <input type="number" class="form-control" id="bmi" name="bmi">
            </div>
            <button type="submit" class="btn btn-danger">Submit</button>
          </form>
    </div>
<%- include('partials/footer'); %>