<%- include('partials/header'); %>
<div class="register">
    <div class="register-info">
        <i class="fas fa-plus  fa-9x logo"></i>
        <h1>Sign In</h1>
        <form name="form" onsubmit="return validate()" action="/signin" method="post" class="auth">
        	<div class="form-group"><input type="email" class="form-control" placeholder="Email id" name="email" required/></div>
            <div class="form-group"><input type="password" class="form-control" placeholder="New Password" name="password" required/></div>
            <br>
            <div class="d-grid gap-2"><button type="submit" class="btn btn-danger">Sign In</button></div>
        </form>
        <p id="error">**<%= error %></p>
        <small>You have'nt signned up yet? <a href="signup">Click Here</a></small>
    </div>
</div>
<script src="/js/validate.js"></script>
<%- include('partials/footer'); %>